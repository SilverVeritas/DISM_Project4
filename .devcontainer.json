{
    "name": "Anime Search App",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "forwardPorts": [8080],
    "postCreateCommand": "mvn clean package && cp target/ROOT.war /usr/local/tomcat/webapps/ && catalina.sh run",
    "customizations": {
        "vscode": {
            "extensions": [
                "vscjava.vscode-java-pack",
                "redhat.vscode-xml"
            ]
        }
    }
}
